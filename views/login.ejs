<nav>
    <ul>
        <li style="background-color:#ffffff;"><a href="/pages/registration" style="color:#000000;">Sign Up</a></li>
    </ul>
</nav>
    <div class="form">    
        <div class="about">
        <img src="images/logo.png" alt="" style="margin-top:10px;">    
            <form style="margin-top: 20px;"
            action="/pages/post/login"
            method="post"
            enctype="application/x-www-form-urlencoded"
            >
                <label for="email">Email:</label><br>
                <input type="email" name="email" id="email"><br>
                <label for="password">Password:</label><br>
                <input type="password" name="password" id="password" required><br>
                <input type="checkbox" id="getpsw" onclick="myFunction()">Show Password<br>
                <script>
                function myFunction() {
                    var x = document.getElementById("password");
                    if (x.type === "password") {
                        x.type = "text";
                    } else {
                        x.type = "password";
                    }
                }
                </script>
                <button type="submit" class="btnlogin">Log in</button>
            </form>
            Don't have an account? <a class="signup" href="/pages/registration">Sign Up</a>
        </div>
    </div>
